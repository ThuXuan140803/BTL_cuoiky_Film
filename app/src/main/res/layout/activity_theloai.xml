<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201658"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txttheloai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Thể Loại"
        android:textColor="#E2E2E2"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRCP" />

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="89dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btntheloai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#673AB7"
            android:text="Thể loại"
            android:textAlignment="center"
            android:textColor="#CDDC39"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnphim"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#673AB7"
            android:text="Phim"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btntaikhoan"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#673AB7"
            android:text="Tài khoản"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iXML"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xml" />

    <TextView
        android:id="@+id/txtRCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="RẠP CHIẾU PHIM XML"
        android:textColor="#FEFEFE"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/iXML"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutMai"
        android:layout_width="393dp"
        android:layout_height="93dp"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/txttheloai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/iMovieMai"
            android:layout_width="160dp"
            android:layout_height="93dp"
            app:srcCompat="@drawable/mai" />

        <Button
            android:id="@+id/btnMovieMai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Tình cảm"
            android:textColor="@color/black"
            android:textSize="28sp"
            tools:ignore="DuplicateClickableBoundsCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutKungfu"
        android:layout_width="393dp"
        android:layout_height="93dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMai">

        <ImageView
            android:id="@+id/iMovieKungfu"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/kungfu" />
        <Button
            android:id="@+id/btnMovieKungfu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoạt hình"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:textSize="28sp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutGodzilla"
        android:layout_width="393dp"
        android:layout_height="93dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutKungfu">

        <ImageView
            android:id="@+id/iMovieGodzilla"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/kong" />
        <Button
            android:id="@+id/btnMovieGodzilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hành động"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:textSize="28sp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutDenmang"
        android:layout_width="393dp"
        android:layout_height="93dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutGodzilla">

        <ImageView
            android:id="@+id/iMovieDenmang"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/denmang" />
        <Button
            android:id="@+id/btnMovieDenmang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinh dị"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="49dp"
            android:textSize="28sp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>