<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201658"
    tools:context=".activity_P_TC_mai">

    <ImageView
        android:id="@+id/iMovieMai"
        android:layout_width="410dp"
        android:layout_height="199dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtThongtin"
        app:srcCompat="@drawable/mai" />

    <TextView
        android:id="@+id/txtThongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Thông tin phim"
        android:textColor="#F6F6F6"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iMuiten"
        android:layout_width="43dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toStartOf="@+id/txtThongtin"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/txtMai"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:text="MAI-T18"
        android:textColor="#EAEAEA"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iMovieMai" />

    <Button
        android:id="@+id/btnDatve"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#5755FE"
        android:text="Đặt vé"
        android:textColor="#FBFBFB"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toEndOf="@+id/txtMai"
        app:layout_constraintTop_toBottomOf="@+id/iMovieMai" />

    <LinearLayout
        android:id="@+id/linearLayouta"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDatve">

        <TextView
            android:id="@+id/txtTTphim"
            android:layout_width="357dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text='MAI xoay quanh câu chuyện về cuộc đời của một người phụ nữ. Poster đậm chất nghệ thuật của MAI gây tò mò với lời tựa: "Quá khứ chưa ngủ yên, ngày mai liệu sẽ đến?".'
            android:textColor="#FBFBFB"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutb"
        android:layout_width="148dp"
        android:layout_height="258dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouta">

        <TextView
            android:id="@+id/txtKhoichieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khởi chiếu"
            android:textColor="#FEFEFE"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtTheloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Thể loại"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtThoigian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Thời lượng"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txtNgonngu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ngôn ngữ"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txtDienvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Diễn viên"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutc"
        android:layout_width="209dp"
        android:layout_height="274dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayouta">

        <TextView
            android:id="@+id/txtkc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/02/2024"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txttl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tâm lý,tình cảm"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/txttluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="125 phút"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/txtnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Thuyết minh tiếng việt"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/txtdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phương Anh Đào, Tuấn Trần, Trấn Thành, Hồng Đào, Uyên Ân, Ngọc Giàu, Việt Anh, Khả Như, Quốc Khánh,Quỳnh Anh"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>